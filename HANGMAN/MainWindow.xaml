<Window x:Class="HANGMAN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HANGMAN"
        mc:Ignorable="d"
        Title="Hangman" Height="450" Width="800">
    <Grid Background="DarkGray">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="word" Content="Generate word" Padding="8" Width="150" Background="LemonChiffon"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="checkBtn" Content="Check letter" Padding="8" Width="150" Background="Chartreuse" />
                <TextBox x:Name="checkbox" Width="100" Margin="4"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Word:"/>
                <Label x:Name="guessedWord" Width="200" Margin="4"/>
            </StackPanel>
        </StackPanel>
        <Label x:Name="hangmanLabel" FontSize="30" Width="400" HorizontalContentAlignment="Center" VerticalAlignment="Top" Margin="200,128,200,0"/>
    </Grid>
</Window>
